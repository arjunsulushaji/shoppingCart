<section>
    <div class="container">
        <form action="" id="checkout" method="post">
            <div class="p-4" style="width: 50%; float:left;">
                <div class="form-group">
                    <label for="">Address</label>
                    <input type="text" class="form-control" id="" name="address" placeholder="Enter address">
                </div>
                <div class="form-group">
                    <label for="">Pin-code</label>
                    <input type="number" class="form-control" id="" placeholder="Enter pin-code" name="pincode">
                </div>
                <div class="form-group">
                    <label for="">Mobile-number</label>
                    <input type="number" class="form-control" id="" placeholder="Enter mobile-number"
                        name="number">
                        <input type="text" name="userId" id="" value="{{user._id}}" hidden>
                </div>
            </div>
            <div class="p-4" style="width: 50%; float:left;">
                <h4 style="text-align: center;">Total amount: Rs:{{total}} </h4>
                <hr>
            </div>
            <h4 style="text-align: left;">Payment method</h4>
            <div class="form-group">
                <input class="" type="radio" name="payment" id="cod" value="COD">
                <label class="" for="">
                    Cod
                </label><br>
                <input class="" type="radio" name="payment-method" id="online" value="ONLINE">
                <label class="" for="">
                    Online
                </label>
            </div>
            <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
        </form>
    </div>
</section>
<script>

    $("#checkout").submit((e) => {
        e.preventDefault()
        $.ajax({
            url: '/order',
            method: 'post',
            data: $('#checkout').serialize(),
            success: (response) => {
                alert(response)
                if(response.status){
                    location.href='/orders'
                }
            }
        })
    })
</script>