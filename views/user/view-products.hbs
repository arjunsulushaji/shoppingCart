<section>
    <div class="container pt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 col-6 p-3">
                <div class="card" style="width: 17rem; height:27rem;">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 17rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>